{
  "manifest_version": 2,
  "name": "YouTube Embedder",
  "version": "1.0",
  "description": "Embed YouTube videos directly into the current browser tab.",
  "icons": {
    "48": "icons8-embed-100.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "browser_action": {
    "default_icon": {
      "48": "icons8-embed-100.png"
    },
    "default_title": "YouTube Embedder"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "icons": {
    "48": "icons8-embed-100.png"
  }
}
